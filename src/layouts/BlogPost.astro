---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import { Image } from 'astro:assets';

type Props = CollectionEntry<'posts'>['data'] & { slug: string };

const { title, description, image, slug, tags } = Astro.props;
const pubDate = Astro.props.pubDate ? new Date(Astro.props.pubDate) : undefined;

// Fetch all posts to exclude current one and show others
const allPosts = await getCollection('posts');
const relatedPosts = allPosts
  .filter((post) => post.slug !== slug)
  .slice(0, 3); // Show max 3 related posts
---

<BaseLayout title={title} description={description}>
  <article class="animate-fade-in">
    <div class="hero-wrapper">
      {image && <Image src={image} alt={title} class="hero-image" />}
      <div class="hero-overlay"></div>
    </div>
    
    <div class="prose-container">
      <header class="post-header">
        <div class="meta">
          {pubDate && <time datetime={pubDate.toISOString()}>{pubDate.toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' })}</time>}
        </div>
        <h1>{title}</h1>
        {Astro.props.tags && (
          <div class="tags">
            {Astro.props.tags.map((tag: string) => (
              <a href={`/tags/${tag}`} class="tag">#{tag}</a>
            ))}
          </div>
        )}
        <hr class="separator"/>
      </header>
      
      <div class="prose">
        <slot />
      </div>
    </div>
  </article>

  {relatedPosts.length > 0 && (
    <section class="related-posts animate-fade-in" style="animation-delay: 0.2s;">
      <h3>Read Next</h3>
      <div class="related-grid">
        {relatedPosts.map((post) => (
          <a href={`/${post.slug}`} class="related-card glass">
            {post.data.image && <Image src={post.data.image} alt={post.data.title} class="related-thumb" width={300} height={150} />}
            <div class="related-content">
              <h4>{post.data.title}</h4>
            </div>
          </a>
        ))}
      </div>
    </section>
  )}
</BaseLayout>

<style>
  .hero-wrapper {
    position: relative;
    width: 100vw;
    margin-left: 50%;
    transform: translateX(-50%);
    height: 400px; /* Cinematic height */
    margin-bottom: 3rem;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
    border: none;
    mask-image: linear-gradient(to bottom, black 50%, transparent 100%);
    -webkit-mask-image: linear-gradient(to bottom, black 50%, transparent 100%);
  }
  
  .prose-container {
    max-width: 720px; /* Optimal reading width */
    margin: -100px auto 0; /* Overlap hero */
    position: relative;
    z-index: 10;
  }
  
  .post-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .meta {
    color: var(--accent-primary);
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.1;
    margin-bottom: 2rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .tag {
    background: rgba(34, 211, 238, 0.1);
    color: var(--accent-primary);
    padding: 0.2rem 0.8rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 500;
    text-decoration: none; /* Removed underline */
    transition: background 0.2s;
  }
  
  .tag:hover {
    background: rgba(34, 211, 238, 0.25);
  }
  
  .separator {
    width: 60px;
    height: 4px;
    background: var(--gradient-main);
    border: none;
    margin: 0 auto;
    border-radius: 2px;
  }

  .prose {
    font-size: 1.125rem; /* Larger body text */
    line-height: 1.8;
  }
  
  /* Markdown Content Styling Hooks */
  .prose :global(h2) {
    font-size: 1.75rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--border-subtle);
    padding-bottom: 0.5rem;
  }
  
  .prose :global(p) {
    margin-bottom: 1.5rem;
    color: var(--text-main);
  }
  
  .prose :global(a) {
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
    text-decoration-color: var(--accent-primary);
  }
  
  .prose :global(blockquote) {
    border-left: 4px solid var(--accent-secondary);
    background: rgba(192, 132, 252, 0.1);
    padding: 1rem 1.5rem;
    border-radius: 0 0.5rem 0.5rem 0;
    font-style: italic;
    color: var(--text-heading);
    margin: 2rem 0;
  }

  .related-posts {
    max-width: 900px;
    margin: 6rem auto 0;
  }

  .related-posts h3 {
    margin-bottom: 2rem;
    font-size: 1.5rem;
    text-align: left;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .related-card {
    border-radius: 0.75rem;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .related-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px -10px rgba(0,0,0,0.5);
    border-color: var(--accent-primary);
  }

  .related-thumb {
    width: 100%;
    height: 160px;
    object-fit: cover;
  }

  .related-content {
    padding: 1.25rem;
  }

  .related-content h4 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-heading);
    line-height: 1.4;
  }
</style>
